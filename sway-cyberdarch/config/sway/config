###-----------------------------------------------------------------------> MENU APAGADO

# Shutdown, Reboot, Lock Screen, and Logout

set $power_mode "power"
bindsym $mod+Shift+q      mode $power_mode
mode $power_mode {
    bindsym p         exec systemctl poweroff
    bindsym r         exec systemctl reboot
    bindsym l         exec swaylock -i $lockscreen, mode "default"
    bindsym q         exec swaynag -t warning -m 'Do you really want to exit sway' -b 'Yes, exit sway' 'swaymsg exit'
    bindsym h         exec systemctl hibernate
    #bindsym s        exec sudo  /lib/systemd/systemd-sleep hybrid-sleep
    bindsym s         exec pm-suspend

# Hibernate
  bindsym $mod+Shift+z exec swaynag -t warning -m 'Sleepy time?!?!' -b 'ZzZz...' 'systemctl hibernate'
  bindsym Return    mode "default"
  bindsym Escape    mode "default"
}

###---------------------------------------------------------------------------------> MULTIMEDIA

# Pipewire Audio controls

# Custom Keys Default
bindsym XF86AudioRaiseVolume exec "amixer -c 0 set Master 1%+ unmute"
bindsym XF86AudioLowerVolume exec "amixer -c 0 set Master 1%- unmute"
bindsym XF86AudioMute exec "amixer -c 0 set Master toggle"
bindsym XF86AudioMicMute exec "amixer -c 0 set Capture toggle"

# Custom Keys
bindsym $mod+equal exec "amixer -c 0 set Master 1%+ unmute"
bindsym $mod+minus exec "amixer -c 0 set Master 1%- unmute"
bindsym $mod+Ctrl+minus exec "amixer -c 0 set Master toggle"

# Default Keys Brightness
bindsym XF86MonBrightnessUp exec "light -A 5"  # increase screen brightness
bindsym XF86MonBrightnessDown exec "light -U 5"	# decrease screen brightness

# Custom Keys Brightness
bindsym $mod+shift+equal exec light -A 5    # increase screen brightness
bindsym $mod+shift+minus exec light -U 5  # decrease screen brightness

# multimedia keys/spotify conf
# Keys Default
bindsym XF86AudioPlay  exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym XF86AudioNext  exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym XF86AudioPrev  exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

# Custom Keys
bindsym  $mod+period  exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym  $mod+slash  exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym  $mod+comma  exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

# screenshot

set $screenshot_mode "Screenshot"
bindsym $mod+Alt+p      mode $screenshot_mode
mode $screenshot_mode {

    bindsym h         exec grim -o LVDS-1 $HOME/$(date +'D-shot-LVSD_%Y-%m-%d-%H%M%S.png'); exec notify-send -t 4000 -i $HOME/.config/mako/logo/screenshot.png "Se Ha Hecho Una Captura Fullscreen De LVSD-1" "Se guardará en $HOME"
    bindsym l         exec  grim -o HDMI-A-1 $HOME/$(date +'D-shot-HDMI_%Y-%m-%d-%H%M%S.png'); exec notify-send -t 4000 -i $HOME/.config/mako/logo/screenshot.png "Se Ha Hecho Una Captura Fullscreen De HDMI-A-1" "Se guardará en $HOME"
    bindsym f         exec grim -t png $HOME/$(date +'D-shot-Fullscreen_%Y-%m-%d-%H%M%S.png'); exec notify-send -t 4000 -i $HOME/.config/mako/logo/screenshot.png "Se Ha Hecho Una Captura Fullscreen De Todos Los Monitores" "Se guardará en $HOME"
    bindsym a         exec --no-startup-id slurp | grim -t png -g - $HOME/$(date +'Area-D-shot_%Y-%m-%d-%H%M%S.png')
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

###-----------------------------------------------------------------------------------------------> MANEJO DE VENTANAS

# Preseleccionar forma de ventana Horizontal
bindsym $mod+p split h; exec notify-send -t 4000 -i $HOME/.config/mako/logo/H.png "Se Lanzará { | } Horizontal La Terminal"
# Preseleccionar forma de ventana Vertical
