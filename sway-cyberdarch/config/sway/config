# Configure outputs here
# How to get outputs configurable - $ swaymsg -t get_outputs
output LVDS-1 mode 1366x768@60Hz {
                background $wallpeaper
                resolution 1366x768
		scale 0
           }

# Configure outputs here
# How to get outputs configurable - $ swaymsg -t get_outputs
output HDMI-A-1 mode 1920x1080@60Hz {
                background $wallpeaper
                resolution 1920x1080
		scale 0
           }


# Default displays
